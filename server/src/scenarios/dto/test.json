{
    "name": "Create issue on new commit",
    "trigger": {
        "name": "NewCommit",
        "serviceName": "Github",
        "description": "Triggers when a new commit is pushed to a repository",
        "fields": [
            {
                "name": "repository_url",
                "value": "https://github.com/kbitoune/befunge-hello-world"
            },
            {
                "name": "branch",
                "value": "test"
            }
        ]
    },
    "reaction": {
        "name": "CreateIssue",
        "serviceName": "Github",
        "description": "Creates a new issue on a repository",
        "fields": [
            {
                "name": "repository_url",
                "value": "{{repository_url}}"
            },
            {
                "name": "title",
                "value": "New commit on {{branch}}"
            },
            {
                "name": "body",
                "value": "Commit [{{sha}}]({{html_url}}) by {{authorName}} ({{authorEmail}}) on {{date}}"
            },
            {
                "name": "milestone",
                "value": ""
            }
        ]
    }
}
